@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Login</h2>
            <p>Welcome back! Please log in to your account</p>
        </div>
        <div class="auth-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div id="email-confirmation-message" class="alert alert-warning" style="display: none;">
                    Email not confirmed. Please check your email for a confirmation link or 
                    <a asp-page="./ResendEmailConfirmation">click here to resend</a> the confirmation email.
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control custom-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="auth-button">Log in</button>
                </div>
                <div class="links-section">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
        
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="auth-divider">
                <span>OR</span>
            </div>
            <div class="external-auth">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="external-auth-button" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            Sign in with @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

<style>
    :root {
        --primary-color: #363062;
        --primary-light: #4a4346;
        --primary-dark: #252223;
        --text-light: #ffffff;
        --text-dark: #333333;
        --accent-color: #5c5b5b;
    }
    
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        padding: 20px;
        padding-top: 100px;
    }
    
    .auth-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 450px;
        overflow: hidden;

    }
    
    .auth-header {
        background-color: var(--primary-color);
        color: var(--text-light);
        padding: 25px;
        text-align: center;
    }
    
    .auth-header h2 {
        margin: 0;
        font-weight: 700;
        font-size: 24px;
    }
    
    .auth-header p {
        margin: 10px 0 0;
        opacity: 0.8;
        font-size: 14px;
    }
    
    .auth-body {
        padding: 30px;
    }
    
    .custom-input {
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    
    .custom-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(54, 48, 98, 0.25);
    }
    
    .auth-button {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 5px;
        padding: 12px 20px;
        font-size: 16px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    
    .auth-button:hover {
        background-color: var(--primary-light);
    }
    
    .links-section {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }
    
    .links-section a {
        color: var(--primary-color);
        text-decoration: none;
    }
    
    .links-section a:hover {
        text-decoration: underline;
    }
    
    .auth-divider {
        text-align: center;
        margin: 15px 0;
        position: relative;
    }
    
    .auth-divider::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 30px;
        right: 30px;
        height: 1px;
        background-color: #ddd;
    }
    
    .auth-divider span {
        position: relative;
        background-color: white;
        padding: 0 10px;
        color: var(--accent-color);
        font-size: 14px;
    }
    
    .external-auth {
        padding: 0 30px 30px;
    }
    
    .external-auth-button {
        width: 100%;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    
    .external-auth-button:hover {
        background-color: #f8f9fa;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Check if there's an error message containing "Email not confirmed"
            const validationSummary = $('.validation-summary-errors ul li');
            
            validationSummary.each(function() {
                if ($(this).text().includes('Email not confirmed')) {
                    // Show the custom message and hide the default one
                    $('#email-confirmation-message').show();
                    $(this).hide();
                }
            });
        });
    </script>
}
