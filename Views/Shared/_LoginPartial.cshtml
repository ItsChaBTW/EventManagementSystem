@using Microsoft.AspNetCore.Identity
@using EventManagementSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="navbar-nav w-full flex justify-between items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="nav-link text-white">
            Hello @UserManager.GetUserAsync(User).Result.FullName!
        </div>
    }

    <div class="d-flex align-items-center space-x-4">
        @if (SignInManager.IsSignedIn(User))
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white hover:text-gray-300 transition-colors duration-200">
                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                </button>
            </form>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </div>
</div>
