@model EventManagementSystem.Models.Event

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

<div class="event-details">
    <div class="event-header-stripe bg-@Model.Category.ToLower()" style="height: 8px; margin: -25px -25px 20px -25px; border-radius: 12px 12px 0 0;"></div>
    
    <div class="event-detail-header d-flex justify-content-between mb-4">
        <h3 class="mb-0">@Model.Title</h3>
        <span class="event-category bg-@Model.Category.ToLower()" style="font-size: 0.9rem; padding: 5px 12px; border-radius: 15px; color: white;">
            @Model.Category
        </span>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="detail-group mb-3">
                <label class="text-muted">Start Date</label>
                <div class="detail-value">
                    <i class="far fa-calendar-alt me-2"></i>
                    @Model.StartDate.ToString("MMM dd, yyyy")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-group mb-3">
                <label class="text-muted">End Date</label>
                <div class="detail-value">
                    <i class="far fa-calendar-alt me-2"></i>
                    @Model.EndDate.ToString("MMM dd, yyyy")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-group mb-3">
                <label class="text-muted">Start Time</label>
                <div class="detail-value">
                    <i class="far fa-clock me-2"></i>
                    @Model.StartDate.ToString("h:mm tt")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-group mb-3">
                <label class="text-muted">End Time</label>
                <div class="detail-value">
                    <i class="far fa-clock me-2"></i>
                    @Model.EndDate.ToString("h:mm tt")
                </div>
            </div>
        </div>
    </div>
    
    <div class="detail-group mb-3">
        <label class="text-muted">Location</label>
        <div class="detail-value">
            <i class="fas fa-map-marker-alt me-2"></i>
            @Model.Location
        </div>
    </div>
    
    <div class="detail-group mb-3">
        <label class="text-muted">Maximum Attendees</label>
        <div class="detail-value">
            <i class="fas fa-users me-2"></i>
            @(Model.MaxAttendees.HasValue ? Model.MaxAttendees.Value.ToString() : "Unlimited")
        </div>
    </div>
    
    <div class="detail-group mb-4">
        <label class="text-muted">Description</label>
        <div class="detail-value">
            @Model.Description
        </div>
    </div>
    
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Edit", "Events", new { id = Model.Id })" class="btn btn-warning me-2">
            <i class="fas fa-edit me-1"></i> Edit
        </a>
    </div>
</div>

<style>
    .event-details {
        position: relative;
    }
    
    .detail-group label {
        font-size: 0.85rem;
        display: block;
        margin-bottom: 4px;
    }
    
    .detail-value {
        font-size: 1.05rem;
    }
</style> 