@model EventManagementSystem.Models.EventReport

@{
    ViewData["Title"] = "Monthly Report";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        .report-container {
            padding: 30px 0;
            margin-top: 50px;
        }
        
        .page-header {
            background: linear-gradient(135deg, #363062 0%, #4D4C7D 100%);
            padding: 30px;
            color: white;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }
        
        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            transform: translate(40%, -40%);
        }
        
        .page-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .page-subtitle {
            font-size: 1.5rem;
            font-weight: 500;
            opacity: 0.85;
        }
        
        .filter-card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .filter-form {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 15px;
        }
        
        .filter-label {
            font-weight: 600;
            color: #444;
            margin-bottom: 0;
            white-space: nowrap;
        }
        
        .filter-select {
            border-radius: 6px;
            border: 1px solid #ddd;
            padding: 8px 15px;
            font-size: 0.95rem;
            min-width: 120px;
        }
        
        .btn-filter {
            background: linear-gradient(135deg, #363062 0%, #4D4C7D 100%);
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .btn-filter:hover {
            box-shadow: 0 4px 10px rgba(54, 48, 98, 0.3);
            transform: translateY(-2px);
        }
        
        .stats-card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            padding: 25px;
            text-align: center;
            height: 100%;
            transition: all 0.3s;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        
        .stats-icon {
            width: 70px;
            height: 70px;
            background-color: rgba(54, 48, 98, 0.1);
            color: #363062;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin: 0 auto 15px;
        }
        
        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #363062;
            line-height: 1;
            margin-bottom: 10px;
        }
        
        .stats-label {
            font-size: 1rem;
            color: #666;
            font-weight: 500;
        }
        
        .events-table {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            overflow: hidden;
            margin-top: 30px;
        }
        
        .table-header {
            background-color: #f8f9fa;
            padding: 15px 25px;
            border-bottom: 1px solid #eee;
        }
        
        .table-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0;
        }
        
        .table-body {
            padding: 0;
        }
        
        .custom-table {
            margin-bottom: 0;
        }
        
        .custom-table th {
            background-color: #f8f9fa;
            font-weight: 600;
            padding: 15px;
            color: #444;
            border-bottom: 2px solid #eee;
        }
        
        .custom-table td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
        }
        
        .category-badge {
            padding: 5px 12px;
            border-radius: 25px;
            font-size: 0.8rem;
            color: white;
            font-weight: 500;
            display: inline-block;
        }
        
        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s;
            margin-top: 20px;
        }
        
        .btn-back:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            color: white;
        }
        
        /* Empty state */
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            background-color: #f8f9fa;
            border-radius: 12px;
            margin-top: 20px;
        }
        
        .empty-icon {
            font-size: 3rem;
            color: #ccc;
            margin-bottom: 15px;
        }
        
        /* Colors for different event categories */
        .bg-conference { background-color: #4e73df; }
        .bg-seminar { background-color: #1cc88a; }
        .bg-workshop { background-color: #36b9cc; }
        .bg-party { background-color: #f6c23e; }
        .bg-exhibition { background-color: #e74a3b; }
        .bg-concert { background-color: #fd7e14; }
        .bg-meeting { background-color: #6f42c1; }
        .bg-other { background-color: #858796; }
        
        /* Modal Styling */
        .modal-content {
            border-radius: 12px;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
        }
        
        .modal-header {
            background: linear-gradient(135deg, #363062 0%, #4D4C7D 100%);
            color: white;
            border-bottom: none;
            padding: 20px 25px;
        }
        
        .modal-footer {
            border-top: 1px solid #eee;
            padding: 15px 25px;
        }
        
        .modal-body {
            padding: 25px;
        }
        
        .btn-secondary {
            background-color: #818FB4;
            border: none;
            border-radius: 20px;
            padding: 8px 20px;
        }
        
        .btn-secondary:hover {
            background-color: #363062;
        }
    </style>
}

<div class="container report-container">
    <div class="text-left">
        <a asp-action="Index" class="btn btn-back">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
    <div class="page-header">
        <h1 class="page-title">Monthly Event Report</h1>
        <h2 class="page-subtitle">@Model.MonthName</h2>
    </div>
    
    <div class="filter-card">
        <form method="get" class="filter-form">
            <label class="filter-label">Select Month:</label>
            <select name="month" class="form-select filter-select" asp-items="@(new SelectList(ViewBag.MonthsList, "Value", "Text", ViewBag.CurrentMonth))"></select>
            
            <label class="filter-label">Select Year:</label>
            <select name="year" class="form-select filter-select" asp-items="@(new SelectList(ViewBag.YearsList, "Value", "Text", ViewBag.CurrentYear))"></select>
            
            <button type="submit" class="btn btn-filter">
                <i class="fas fa-filter me-2"></i>Apply Filter
            </button>
        </form>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stats-number">@Model.TotalEvents</div>
                <div class="stats-label">Total Events</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-number">@Model.TotalAttendees</div>
                <div class="stats-label">Total Attendees</div>
            </div>
        </div>
    </div>
    
    @if (Model.Events.Any())
    {
        <div class="events-table">
            <div class="table-header">
                <h3 class="table-title">
                    <i class="fas fa-list me-2"></i>Events in @Model.MonthName
                </h3>
            </div>
            <div class="table-body">
                <div class="table-responsive">
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>Event</th>
                                <th>Date</th>
                                <th>Category</th>
                                <th>Max Attendees</th>
                                <th>Organizer</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Events)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Title</div>
                                    </td>
                                    <td>@item.StartDate.ToString("MMM dd, yyyy - h:mm tt")</td>
                                    <td>
                                        <span class="category-badge bg-@item.Category.ToLower()">
                                            @item.Category
                                        </span>
                                    </td>
                                    <td>@(item.MaxAttendees?.ToString() ?? "Unlimited")</td>
                                    <td>@item.OrganizerName</td>
                                    <td>
                                        <a href="javascript:void(0)" onclick="openDetailsModal(@item.Id)" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h3>No Events Found</h3>
            <p class="text-muted">No events were found for the selected month. Try changing the filter or adding new events.</p>
        </div>
    }
    
   
</div>

<!-- Event Details Modal -->
<div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventDetailsModalLabel">Event Details</h5>
            </div>
            <div class="modal-body" id="eventDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Any existing scripts can stay here
        });
        
        // Function to open event details modal
        function openDetailsModal(eventId) {
            // Show the modal
            var detailsModal = new bootstrap.Modal(document.getElementById('eventDetailsModal'));
            detailsModal.show();
            
            // Load event details via AJAX
            $.ajax({
                url: '@Url.Action("DetailsPartial", "Events")/' + eventId,
                type: 'GET',
                success: function(response) {
                    $('#eventDetailsContent').html(response);
                },
                error: function() {
                    $('#eventDetailsContent').html('<div class="alert alert-danger">Error loading event details. Please try again.</div>');
                }
            });
        }
    </script>
} 