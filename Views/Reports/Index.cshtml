@{
    ViewData["Title"] = "Reports";
}

<h1>Event Reports</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Monthly Reports</h5>
            </div>
            <div class="card-body">
                <p>View event statistics for a specific month including:</p>
                <ul>
                    <li>Total number of events</li>
                    <li>Total number of attendees</li>
                    <li>Details for each event</li>
                </ul>
                <a asp-action="Monthly" class="btn btn-primary">View Monthly Report</a>
            </div>
        </div>
    </div>
</div> 